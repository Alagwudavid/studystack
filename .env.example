# =============================================================================
# BITROOT ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local for development or configure these variables
# in your production environment.

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Bitroot
NEXT_PUBLIC_APP_NAME=Bitroot

# Application Environment (development, production)
NODE_ENV=development

# Frontend Application URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secure_nextauth_secret_32_chars_minimum

# JWT Secret (should match backend JWT_SECRET)
JWT_SECRET=your_secure_jwt_secret_here

# CSRF Protection
CSRF_SECRET=your_csrf_secret_here

# =============================================================================
# DATABASE & EXTERNAL SERVICES
# =============================================================================

# Supabase Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for email sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME=Bitroot

# Resend API (alternative email service)
RESEND_API_KEY=your_resend_api_key

# =============================================================================
# FILE STORAGE (AWS S3)
# =============================================================================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name

# Assets subdomain URL for file uploads
ASSETS_URL=https://assets.bitroot.com.ng

# =============================================================================
# SECURITY & CORS
# =============================================================================

# Allowed Email Domains for registration
ALLOWED_EMAIL_DOMAINS=gmail.com,outlook.com,yahoo.com

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Monitoring
SENTRY_DSN=your_sentry_dsn

