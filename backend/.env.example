# =============================================================================
# BITROOT BACKEND ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env for development or configure these variables
# in your production environment.

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

APP_NAME="Bitroot API"
APP_ENV=local
APP_KEY=base64:your_32_character_base64_encoded_key_here
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Configuration (Development - XAMPP/WAMP)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bitroot_web
DB_USERNAME=root
DB_PASSWORD=
DB_TIMEOUT=30
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# SQLite Configuration (Alternative for development)
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite
# DB_FOREIGN_KEYS=true

# Production Database Configuration
# DB_HOST=your_production_db_host
# DB_DATABASE=your_production_db_name
# DB_USERNAME=your_production_db_user
# DB_PASSWORD=your_production_db_password

# =============================================================================
# SESSION & CACHE CONFIGURATION
# =============================================================================

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

JWT_SECRET=your_secure_jwt_secret_64_characters_minimum
JWT_ALGO=HS256
JWT_TTL=60

# =============================================================================
# FRONTEND INTEGRATION
# =============================================================================

# Frontend Application URL for CORS and redirects
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Assets subdomain URL for file uploads
ASSETS_URL=https://assets.bitroot.com.ng

# =============================================================================
# FILE STORAGE (AWS S3)
# =============================================================================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Upload Disk Configuration (public for dev, assets for prod)
UPLOADS_DISK=public

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

BCRYPT_ROUNDS=12
FORCE_HTTPS=false
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# 1. Generate APP_KEY using: php artisan key:generate
# 2. Set APP_ENV=production for production deployment
# 3. Set APP_DEBUG=false for production
# 4. Use secure database credentials in production
# 5. Enable FORCE_HTTPS=true for production
# 6. Set SESSION_SECURE_COOKIE=true for HTTPS
